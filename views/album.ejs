<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= album.title %> - Album Detail
  </title>
  <style>
    body {
      margin: 0;
      background: #f5f6fa;
    }

    .body {
      font-family: Arial, sans-serif;
      background: #f5f6fa;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      background: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 10px;
      color: #333;
    }

    .status {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: bold;
    }

    .public {
      background: #2ecc71;
      color: white;
    }

    .private {
      background: #e74c3c;
      color: white;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 15px;
    }

    .gallery-item {
      background: #fafafa;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      text-align: center;
      transition: transform 0.3s;
    }

    .gallery-item:hover {
      transform: translateY(-5px);
    }

    .gallery-item img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .caption {
      padding: 10px;
    }

    .caption h3 {
      margin: 5px 0;
      font-size: 16px;
      color: #333;
    }

    .caption p {
      font-size: 13px;
      color: #777;
    }

    .caption .album-title {
      display: block;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      font-size: 16px;
      margin: 5px 0;
      font-weight: 600;
    }

    .caption .album-content {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      margin: 0;
      color: #666;
      font-size: 13px;
      line-height: 1.2;
      max-height: calc(1.2em * 2);
    }

    .back-btn {
      display: inline-block;
      margin-top: 25px;
      text-decoration: none;
      background: #3498db;
      color: white;
      padding: 10px 18px;
      border-radius: 8px;
      transition: background 0.3s;
    }

    .back-btn:hover {
      background: #2980b9;
    }

    .meta {
      margin: 15px 0;
      padding: 12px;
      background: #f1f2f6;
      border-radius: 10px;
      font-size: 15px;
      color: #555;
    }

    /* üéØ ‡∏™‡πà‡∏ß‡∏ô‡πÅ‡∏ó‡πá‡∏Å */
    .tags {
      margin-top: 15px;
    }

    .tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 8px;
    }

    .tag {
      background: #e3f2fd;
      color: #1565c0;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 500;
      transition: all 0.2s ease;
      text-decoration: none;
    }

    .tag:hover {
      background: #bbdefb;
      color: #0d47a1;
    }

    .actions {
      margin-top: 25px;
    }

    .actions a,
    .actions button {
      display: inline-block;
      margin-right: 10px;
      text-decoration: none;
      background: #3498db;
      color: white;
      padding: 10px 18px;
      border-radius: 8px;
      transition: background 0.3s;
      border: none;
      cursor: pointer;
      font-size: 14px;
    }

    .actions a.edit {
      background: #f1c40f;
    }

    .actions a.edit:hover {
      background: #d4ac0d;
    }

    .actions button.delete {
      background: #e74c3c;
    }

    .actions button.delete:hover {
      background: #c0392b;
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

    <div class="body">
      <div class="container">

        <% function fmtDate(d){ if(!d) return '' ; try { return new
          Date(d).toLocaleString('en-US',{year:'numeric',month:'short',day:'2-digit',hour:'2-digit',minute:'2-digit'});}
          catch(e){ return String(d);} } %>

          <!-- Album header -->
          <h1>
            <%= album.title %>
          </h1>

          <!-- Gallery -->
          <div class="gallery">
            <% if (Array.isArray(album.images) && album.images.length) { %>
              <% album.images.forEach(image=> { %>
                <div class="gallery-item">
                  <a href="/image/<%= image._id || image.id %>">
                    <% const imgSrc=image.fileId ? ('/files/' + image.fileId) : (image.imageUrl || (image.filename
                      ? '/uploads/' + image.filename : '/images/default-cover.jpg' )); %>
                      <img src="<%= imgSrc %>" alt="<%= image.title || image.originalname || 'image' %>"
                        loading="lazy" />
                  </a>
                  <div class="caption">
                    <h3 class="album-title">
                      <%= image.title || 'Untitled' %>
                    </h3>
                    <p class="album-content">
                      <%= image.content || "No details" %>
                    </p>
                    <p style="color:#999;font-size:12px;margin:6px 0 0;">
                      Uploaded: <%= image.createdAt ? fmtDate(image.createdAt) : '-' %>
                    </p>
                  </div>
                </div>
                <% }) %>
                  <% } else { %>
                    <p>No images in this album.</p>
                    <% } %>
          </div>

          <!-- Meta -->
          <div class="meta">
            <p><strong>Content:</strong>
              <%= album.content || "No details" %>
            </p>
            <p><strong>By:</strong>
              <%= album.user ? album.user.name : "Unknown" %>
            </p>
            <p><strong>Status:</strong>
              <% if (album.status==="private" ) { %>
                <span class="status private">Private</span>
                <% } else { %>
                  <span class="status public">Public</span>
                  <% } %>
            </p>
            <p><strong>Created:</strong>
              <%= fmtDate(album.createdAt || album.created_at) %>
            </p>
            <p><strong>Updated:</strong>
              <%= album.updatedAt ? fmtDate(album.updatedAt) : '-' %>
            </p>

            <!-- Tags -->
            <% if (album.tags && album.tags.length) { %>
              <div class="tags">
                <div class="tag-list">
                  <strong>Tags:</strong>
                  <% album.tags.forEach(tag=> { %>
                    <a href="/tags/<%= tag._id || tag.id %>" class="tag">
                      #<%= tag.title %>
                    </a>
                    <% }) %>
                </div>
              </div>
              <% } else { %>
                <div class="tags">
                  <strong>Tags:</strong> <span style="color:#777;">No tags</span>
                </div>
                <% } %>
          </div>

          <!-- Action buttons -->
          <% const currentUserId=(typeof user!=='undefined' && user)?String(user._id||user.id||''):''; const
            albumOwnerId=album&&album.user?String(album.user._id||album.user):''; const
            isOwner=currentUserId&&albumOwnerId&&currentUserId===albumOwnerId; %>

            <div class="actions">
              <a href="#" class="back-btn"
                onclick="if (history.length > 1) { history.back(); } else { window.location = '/home'; } return false;">‚Üê
                Back</a>

              <% if (isOwner) { %>
                <a href="/album/<%= album._id || album.id %>/edit" class="edit">‚úé Edit</a>
                <form action="/api/albums/<%= album._id %>?_method=DELETE" method="POST" style="display:inline;"
                  onsubmit="return confirm('Are you sure you want to delete this album?');">
                  <button type="submit" class="delete">üóë Delete</button>
                </form>
                <% } %>
            </div>

      </div>
    </div>
</body>

</html>